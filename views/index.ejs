<div class="author">
    <h1 class="author__heading">Hi, I am Akhil.</h1>
    <p class="autho_body">Software Engineer.</p>
</div>

<img src="/images/image_for_project.png" alt="image description" class="hero-imgage" width="981" height="528">
<section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>
    <ul class="article-ul">
        <% data.forEach(post => { %>
            <li>
                <a href="/post/<%= post._id  %>">
                <span><%= post.title %></span>
                <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
                </a>
            </li>
        <% }) %>
    </ul>
    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>
</section>